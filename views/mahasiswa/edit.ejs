<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <h1>Hello, world!</h1>
    <div class="container">
        <div class="row">
            <div class="col">
                <a href="/mahasiswa" class="btn btn-sm btn-danger">Kembali</a>
                <form action="/mahasiswa/update/<%= id %>" method="POST">
                    <input type="text" name="nrp" placeholder="nrp" class="d-block" required value="<%= nrp %>">
                    <input type="text" name="nama_depan" placeholder="nama depan" class="d-block" required value="<%= nama_depan %>">
                    <input type="text" name="nama_belakang" placeholder="nama belakang" class="d-block" required value="<%= nama_belakang %>">
                    <select name="jenis_kelamin" id="" class="d-block" required value="<%= jenis_kelamin %>">
                        <option name="laki-laki">laki-laki</option>
                        <option name="perempuan">perempuan</option>
                    </select>
                    <select name="agama" id="" class="d-block" required value="<%= agama %>">
                        <option name="islam">islam</option>
                        <option name="kristen">kristen</option>
                        <option name="hindu">hindu</option>
                    </select>
                    <input type="text" name="umur" placeholder="umur" class="d-block" required value="<%= umur %>">
                    <input type="text" name="tinggi_badan" placeholder="tinggi badan" class="d-block" required value="<%= tinggi_badan %>">
                    <input type="text" name="gol_darah" placeholder="gol darah" class="d-block" required value="<%= gol_darah %>">
                    <input type="text" name="alamat" placeholder="alamat" class="d-block" required value="<%= alamat %>">
                    <input type="text" name="hobi" placeholder="hobi" class="d-block" required value="<%= hobi %>">
                    <input type="text" name="email" placeholder="email" class="d-block" required value="<%= email %>">
                    <input type="text" name="no_telpon" placeholder="no telpon" class="d-block" required value="<%= no_telpon %>">
                    <input type="text" name="asal_sekolah" placeholder="asal sekolah" class="d-block" required value="<%= asal_sekolah %>">
                    <input type="text" name="tahun_lulus" placeholder="tahun lulus" class="d-block" required value="<%= tahun_lulus %>">
                    <div class="mb-3">
                        <button type="submit" class="btn btn-sm btn-success">Simpan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>